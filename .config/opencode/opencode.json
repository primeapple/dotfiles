{
	"$schema": "https://opencode.ai/config.json",
	"theme": "opencode",
	"model": "",
	"disabled_providers": ["anthropic", "openapi"],
    "keybinds": {
        "messages_half_page_down": "ctrl+d",
        "messages_half_page_up": "ctrl+u",
        "messages_first": "<leader>g",
        "messages_last": "<leader>G",
    },
    "permission": {
        "edit": "allow",
        "bash": {
            "*": "ask",
            "fd": "allow",
            "find": "allow",
            "git diff": "allow",
            "git log": "allow",
            "git status": "allow",
            "grep": "allow",
            "ls": "allow",
            "rg": "allow"
        },
        "external_directory": "deny",
        "webfetch": "ask"
    }
}
