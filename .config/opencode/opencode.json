{
	"$schema": "https://opencode.ai/config.json",
	"theme": "opencode",
	"model": "",
	"disabled_providers": ["anthropic", "openapi"],
    "provider": {
        "jan": {
          "npm": "@ai-sdk/openai-compatible",
          "name": "jan (local)",
          "options": {
            "baseURL": "http://127.0.0.1:1337/v1"
          },
          "models": {
            "Dolphin3_0-Llama3_1-8B-Q8_0": {
              "name": "Dolphin-Llama3_1-8B"
            },
            "bartowski/Nanbeige_Nanbeige4-3B-Thinking-2511-Q6_K_L": {
              "name": "bartowski/Nanbeige"
            }
          }
        }
    },
    "keybinds": {
        "messages_half_page_down": "ctrl+d",
        "messages_half_page_up": "ctrl+u",
        "messages_first": "<leader>g",
        "messages_last": "<leader>G",
    },
    "permission": {
        "bash": {
            "*": "ask",
            "cat *": "allow",
            "fd *": "allow",
            "find *": "allow",
            "gh issue list": "allow",
            "gh issue view *": "allow",
            "git diff *": "allow",
            "git log *": "allow",
            "git show *": "allow",
            "git status": "allow",
            "go test *": "allow",
            "grep *": "allow",
            "head": "allow",
            "ls *": "allow",
            "make *": "allow",
            "mkdir *": "allow",
            "npm test *": "allow",
            "rg *": "allow",
            "wc *": "allow"
        },
        "edit": "allow",
        "external_directory": "deny",
        "webfetch": "deny"
    },
    "mcp": {
        "context7": {
            "type": "remote",
            "url": "https://mcp.context7.com/mcp",
            "headers": {
                "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
            }
        }
    }
}
