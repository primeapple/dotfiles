{
	"$schema": "https://opencode.ai/config.json",
	"theme": "opencode",
	"model": "",
	"disabled_providers": ["anthropic", "openapi"],
    "keybinds": {
        "messages_half_page_down": "ctrl+d",
        "messages_half_page_up": "ctrl+u",
        "messages_first": "<leader>g",
        "messages_last": "<leader>G",
    },
    "permission": {
        "bash": {
            "*": "ask",
            "cat *": "allow",
            "fd *": "allow",
            "find *": "allow",
            "gh issue list": "allow",
            "gh issue view *": "allow",
            "git diff": "allow",
            "git log": "allow",
            "git status": "allow",
            "go test *": "allow",
            "grep *": "allow",
            "head": "allow",
            "ls *": "allow",
            "mkdir": "allow",
            "rg *": "allow",
            "wc": "allow"
        },
        "edit": "allow",
        "external_directory": "deny",
        "webfetch": "deny"
    },
    "mcp": {
        "context7": {
            "type": "remote",
            "url": "https://mcp.context7.com/mcp",
            "headers": {
                "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
            }
        }
    }
}
